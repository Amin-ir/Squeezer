@{
    ViewBag.Title = "URL Generated!";
}
<div class="white-rounded-container">
    <p style="font-size:20px; color:white;">Short URL Generated: </p>
    <div style="padding: 10px 100px 10px 100px; display:flex; flex-direction:row; justify-content:space-around; background-color: white; border-radius: 20px;" class="mb-2">
        <div>
            <p style="font-size:30px; margin:0; display:inline;" id="shortenedUrl">@Model.ShortenedUrl</p>
        </div>
        <div style="margin-left:5px;">
            <button class="btn btn-light" title="Copy to clipboard!" style="height:100%; border-radius:50px;" id="copyButton" onclick="copyToClipboard();"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-copy" viewBox="0 0 16 16">
                <path fill-rule="evenodd" d="M4 2a2 2 0 0 1 2-2h8a2 2 0 0 1 2 2v8a2 2 0 0 1-2 2H6a2 2 0 0 1-2-2V2Zm2-1a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1V2a1 1 0 0 0-1-1H6ZM2 5a1 1 0 0 0-1 1v8a1 1 0 0 0 1 1h8a1 1 0 0 0 1-1v-1h1v1a2 2 0 0 1-2 2H2a2 2 0 0 1-2-2V6a2 2 0 0 1 2-2h1v1H2Z"/>
                </svg>
            </button>
            <button class="btn btn-success" id="successCheck" style="display:none; height:100%; border-radius:50px;" title="Copied to clipboard!"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-check-circle" viewBox="0 0 16 16">
                  <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z"/>
                  <path d="M10.97 4.97a.235.235 0 0 0-.02.022L7.477 9.417 5.384 7.323a.75.75 0 0 0-1.06 1.06L6.97 11.03a.75.75 0 0 0 1.079-.02l3.992-4.99a.75.75 0 0 0-1.071-1.05z"/>
                </svg>
            </button>
        </div>
    </div>
    <p style="font-size:20px; color:white;"><a href="/signup" style="text-decoration:none; font-size:20px;">Sign Up</a> to store/review your generated URLs!</p>
    <a class="btn btn-success col-6 pt-2 pb-2" href="/">Generate More!</a>
</div>
<script type="text/javascript">
    function copyToClipboard(){
        
        var textToCopy = document.getElementById("shortenedUrl");
        
        var tempInput = document.createElement("input");
        
        tempInput.setAttribute("type", "text");
        tempInput.setAttribute("value", textToCopy.textContent);
        
        document.body.appendChild(tempInput);
        
        tempInput.select();
        document.execCommand("copy");
        
        document.body.removeChild(tempInput);

        hideCopyButton();

        displaySuccess();
    }
    function hideCopyButton(){
        var button = document.getElementById("copyButton");
        button.style.display = "none";
    }
    function displaySuccess(){
        var button = document.getElementById("successCheck");
        button.style.display = "inline-block";
    }
</script>