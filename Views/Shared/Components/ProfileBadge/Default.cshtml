@model Squeezer.Models.User?
<span class="badge position-fixed top-0 start-0 p-4 m-3" style="background-color:white; border-radius: 20px;">
    <div class="flex-row">
        <div class="m-1">
            @{
                <div style="border-style:solid; border-color:darkslateblue; border-radius:100px;">
                    @{
                        string profileBackgroundStyleClass = Model is not null ? "btn-success" : "btn-light";
                    <div style="border-style:solid; border-radius:50px;" class="p-3 btn m-1 @profileBackgroundStyleClass">
                    @if (Model is not null)
                    {
                        <a style="text-decoration:none; color:white;" href="/dashboard">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-check" viewBox="0 0 16 16">
                                <path d="M12.5 16a3.5 3.5 0 1 0 0-7 3.5 3.5 0 0 0 0 7Zm1.679-4.493-1.335 2.226a.75.75 0 0 1-1.174.144l-.774-.773a.5.5 0 0 1 .708-.708l.547.548 1.17-1.951a.5.5 0 1 1 .858.514ZM11 5a3 3 0 1 1-6 0 3 3 0 0 1 6 0ZM8 7a2 2 0 1 0 0-4 2 2 0 0 0 0 4Z" />
                                <path d="M8.256 14a4.474 4.474 0 0 1-.229-1.004H3c.001-.246.154-.986.832-1.664C4.484 10.68 5.711 10 8 10c.26 0 .507.009.74.025.226-.341.496-.65.804-.918C9.077 9.038 8.564 9 8 9c-5 0-6 3-6 4s1 1 1 1h5.256Z" />
                            </svg>
                        </a>
                    }
                    else
                    {
                        <a style="text-decoration:none;" href="/user/signup">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-person-plus" viewBox="0 0 16 16">
                                <path d="M6 8a3 3 0 1 0 0-6 3 3 0 0 0 0 6zm2-3a2 2 0 1 1-4 0 2 2 0 0 1 4 0zm4 8c0 1-1 1-1 1H1s-1 0-1-1 1-4 6-4 6 3 6 4zm-1-.004c-.001-.246-.154-.986-.832-1.664C9.516 10.68 8.289 10 6 10c-2.29 0-3.516.68-4.168 1.332-.678.678-.83 1.418-.832 1.664h10z" />
                                <path fill-rule="evenodd" d="M13.5 5a.5.5 0 0 1 .5.5V7h1.5a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0V8h-1.5a.5.5 0 0 1 0-1H13V5.5a.5.5 0 0 1 .5-.5z" />
                            </svg>
                        </a>
                    }
                    </div>
                }
                </div>
            }
        </div>
        @{
            if(Model is not null)
            {
                <div class="flex-column m-1">
                    <div class="p-1" style="font-size:15px; color:rebeccapurple">Signed As: @Model.Name</div>
                    <div><a href="/user/signout" class="btn btn-danger p-2 mt-1 col-12">Sign Out</a></div>
                </div>        
            }
        }
    </div>
</span>