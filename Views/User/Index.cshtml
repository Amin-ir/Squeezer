@model Squeezer.ViewModels.UrlListViewModel
<div>
    <a style="float:right; color:white;" class="btn btn-warning p-2 m-1" href="/">Shorten new URL</a>
</div>
<table class="table table-responsive-md table-hover table-bordered caption-top">
    <thead>
        <tr class="table-dark">
            <th></th>
            <th>Original URL</th>
            <th>Shortened URL</th>
            <th>Date Created</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @{
            foreach(var url in Model.Urls)
            {
                <tr>
                    <td>
                        <a href="/url/delete/@url.Id" onclick="return confirm('Remove the clicked URL?');" 
                            style="text-decoration:none; color:red;">
                            <svg xmlns="http://www.w3.org/2000/svg" width="25" height="25" fill="currentColor" class="bi bi-x" viewBox="0 0 16 16">
                                <path d="M4.646 4.646a.5.5 0 0 1 .708 0L8 7.293l2.646-2.647a.5.5 0 0 1 .708.708L8.707 8l2.647 2.646a.5.5 0 0 1-.708.708L8 8.707l-2.646 2.647a.5.5 0 0 1-.708-.708L7.293 8 4.646 5.354a.5.5 0 0 1 0-.708z" />
                            </svg>
                        </a>
                    </td>
                    <td title="@url.OriginalUrl">@url.GetOriginalUrlPresentation()</td>
                    <td>@url.ShortenedUrl</td>
                    <td>@url.DateAdded</td>
                    <td><a class="btn btn-success p-1" target="_blank" href="@url.OriginalUrl">Visit the link</a></td>
                </tr>
            }
        }
    </tbody>
</table>